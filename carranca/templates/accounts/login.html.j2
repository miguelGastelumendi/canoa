{% extends "./layouts/form.html.j2" %}

{# ╒════════════════ Inputs ════════════════╕ #}
{% block frm_blc_inputs %}

<!-- { User Name -->
<div class="form-group">
    <label class="form-label" inert for="{{form.username.name}}">{{ userLabel }}</label>
    <div class="input-group">
        <span class="input-group-text"> <i class="fas fa-user"></i></span>
        {{ form.username() }}
    </div>
</div>
<!-- User Name } -->

<!--{ Password  -->
<div class="form-group mt-3">
    <label class="form-label" inert for="{{form.password.name}}">{{ passwordLabel }}</label>
    <div class="input-group">
        <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
        {{ form.password() }}
    </div>
</div>
<!-- Password }-->

<!-- { RememberMe -->
<div class="mt-2">
    {{ form.remember_me() }}
    <label class="unselectable-text form-check-label ms-0" for="{{form.remember_me.name}}">
        {{ rememberMe }}
    </label>
</div>
<!-- RememberMe } -->

{% endblock frm_blc_inputs %}
{# ╘════════════════ Inputs ════════════════╛ #}


{# ╒════════════════ Buttons ═══════════════╕ #}
{# % block dlg_blc_footer_buttons  % #}
